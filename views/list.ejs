<!DOCTYPE html>
<html lang="en">
  <%- include("header") -%>
  <body>
    <div class="box" id="heading">
      <h1><%=day%></h1>
    </div>
    <div class="box">
      <% list.map(i => { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" />
          <p><%=i.content%></p>
          <button class="delete" type="submit" name="id" value=<%=i._id%>>-</button>
        </div>

      </form>
      <% }) %>

      <form class="item" action="/" method="post">
        <input
          type="text"
          name="item"
          placeholder="New Item"
          autocomplete="off"
        />
        <button type="submit">+</button>
      </form>
    </div>
  </body>
  <%- include("footer") -%>
</html>
