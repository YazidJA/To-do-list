<!DOCTYPE html>
<html lang="en">
  <%- include("header") -%>
  <body>
    <div class="box" id="heading">
      <h1><%=day%></h1>
      <form class="item" action="/dateSelector" method="post">
        <p>Viewing <%=title%>'s List</p>
        <input type="date" name="selectedDate" onchange="submit" value=<%=selectedDate%> />
        <button class="dateButton" type="submit">></button>
      </form>

    </div>
    <div class="box">
      <% listItems.map(i => { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" />
          <p><%=i.content%></p>
          <button class="delete" type="submit" name="id" value=<%=i._id%>>-</button>
        </div>
        <input type="hidden" name="list" value=<%=selectedDate%> />
      </form>
      <% }) %>

      <form class="item" action="/" method="post">
        <input
          type="text"
          name="item"
          placeholder="New Item"
          autocomplete="off"
        />
        <button type="submit" class="add" name="list" value=<%=selectedDate%>>+</button>
      </form>
    </div>
  </body>
  <%- include("footer") -%>
</html>
